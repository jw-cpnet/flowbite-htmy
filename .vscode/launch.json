{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Consolidated Showcase",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/showcase.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Consolidated Showcase (Debug Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/showcase.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PYTHONDONTWRITEBYTECODE": "1"
            },
            "cwd": "${workspaceFolder}",
            "args": []
        }
    ]
}
