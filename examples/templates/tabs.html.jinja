<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@2.0.2"></script>
</head>
<body class="bg-gray-50 dark:bg-gray-900 p-8">
    <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Tabs Component Showcase</h1>
            <button id="theme-toggle" class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white">
                Toggle Dark Mode
            </button>
        </div>

        <!-- Section 1: DEFAULT Variant -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">1. Default Tabs</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Border + background styling (default variant)
            </p>
            {{ default_tabs }}
        </section>

        <!-- Section 2: UNDERLINE Variant -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">2. Underline Tabs</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Minimal design with bottom border indicator
            </p>
            {{ underline_tabs }}
        </section>

        <!-- Section 3: PILLS Variant -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">3. Pills Tabs</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Rounded pill-shaped buttons with solid background
            </p>
            {{ pills_tabs }}
        </section>

        <!-- Section 4: FULL-WIDTH Variant -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">4. Full-Width Tabs</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Tabs stretch to fill container width equally
            </p>
            {{ full_width_tabs }}
        </section>

        <!-- Section 5: Color Customization -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">5. Color Options</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Underline tabs with purple color (Color.PURPLE)
            </p>
            {{ purple_tabs }}
        </section>

        <!-- Section 6: HTMX Lazy Loading -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">6. HTMX Lazy Loading</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Tabs that load content dynamically when activated
            </p>
            {{ htmx_tabs }}
        </section>

        <!-- Section 7: Icons -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">7. Tabs with Icons</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Icons positioned left (default) and right
            </p>
            {{ icon_tabs }}
        </section>

        <!-- Section 8: Disabled Tabs -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">8. Disabled Tabs</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Tabs with disabled state (non-interactive)
            </p>
            {{ disabled_tabs }}
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
    <script>
        // Dark mode toggle
        const toggle = document.getElementById('theme-toggle');
        toggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });
    </script>
</body>
</html>
